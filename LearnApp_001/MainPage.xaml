<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:sys ="clr-namespace:System;assembly=netstandard"
            x:Class="LearnApp_001.MainPage"
            BindingContext="{Binding MainPageViewModel, Source={StaticResource ViewModelLocator}}">

    <StackLayout>
        <!--
        綁定Label到MainPageViewModel的Result，因為上面已經已用了MainPageViewModel綁定，
        因此下面Binding才查找的到Resoult者個可用屬性
        -->
        <Label FontSize="45"
               Text="{Binding Result}"
               x:Name="Label_ResultLabel"/>
        
        <Button x:Name="ClickMeButton"
                Command="{Binding HelloCommand}"
                FontSize="48"
                Text="Click Me!"/>
        
    </StackLayout>
</ContentPage>